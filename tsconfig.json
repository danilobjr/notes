{
    "compileOnSave": false,
    "compilerOptions": {
      "module": "commonjs",
      "outDir": ".",
      "sourceMap": false,
      "target": "ES2016",
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "jsx": "react",
      "typeRoots": [
      "node_modules/@types"
      ]
    },
    "include" :[
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
